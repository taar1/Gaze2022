<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyEditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <style name="ExpandableLayoutHeader">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/primary_pastel</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="StandardText">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="StandardText.White" parent="StandardText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="StandardText.Dark.Small" parent="StandardText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StandardText.Dark.Extra.Small" parent="StandardText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="RecentContacts">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="RecentContacts.CardNameText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecentContacts.CardAdditionalInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CardView" />

    <style name="CardView.PreviewText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="CardView.PreviewNotesText">
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="CardView.PreviewTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CardView.SectionTitle">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">1</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AllContacts">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AllContacts.ContactName" parent="AllContacts">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="AllContacts.AdditionalInfo" parent="AllContacts">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="Title">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title.Big" parent="Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Title.BigNonBold" parent="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Title.Regular" parent="Title">
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="Text">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Text.Regular" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="Text.Small" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="Text.SmallItalic" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text.Hint" parent="Text">
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ImageCaption">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AddImagesFloatingLabel">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#CCFFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="AddImagesFloatingSublabel">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">8sp</item>
        <item name="android:background">#AAFFFFFF</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="LabelText">
        <item name="android:textColor">#AA000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.6</item>
    </style>


    <style name="RecentContactButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="rippleColor">@color/accent</item>
        <item name="strokeColor">@color/secondary_text</item>
    </style>


    <!--MultiImagePicker-->
    <!--https://android-arsenal.com/details/1/2019-->
    <style name="MIP_theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--MULTI IMAGE SELECT ACTIVITY STYLE-->
    <!--https://github.com/darsh2/MultipleImageSelect-->
    <style name="OverrideMultipleImageSelectTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionModeStyle">@style/OverrideCustomActionModeStyle</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="OverrideCustomActionModeStyle" parent="Base.Widget.AppCompat.ActionMode">
        <item name="background">@color/primary</item>
    </style>


    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonPositive</item>
        <item name="android:windowTitleStyle">@style/CustomDialogTitle</item>
    </style>

    <style name="CustomDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/primary_pastel</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="DialogButtonNeutral">
        <item name="android:textColor">@color/primary_pastel</item>
    </style>

    <style name="DialogButtonNegative">
        <item name="android:textColor">@color/primary_pastel</item>
    </style>

    <style name="DialogButtonPositive">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="GalleryNavigationText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.6</item>
        <item name="android:background">@drawable/text_on_black_rounded_corners</item>
    </style>

</resources>
